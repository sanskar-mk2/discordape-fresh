---
export interface Props {
    title: string;
    publish_date: string;
    author?: string;
}
const { title, publish_date, author = "Anonymous" } = Astro.props.frontmatter;
import Wrapper from "./Wrapper.astro";
---

<Wrapper>
    <div class="w-full flex flex-col items-center">
        <section class="container my-4 bg-base-200 rounded bg-opacity-50">
            <article
                class="prose lg:prose-lg p-2 sm:p-4 md:p-8 lg:p-16"
            >
                <h1 class="text-primary">{title}</h1>
                <p class="italic">published on {publish_date} by {author}</p>
                <slot />
            </article>
        </section>
    </div>
</Wrapper>
